<%= component_controller do %>
  <div data-<%= self.class.stimulus_controller %>-target="data" data-value="<%= @data.to_json %>"></div>
  <% @available_filters.each do |filter, filter_type| %>
    <%= render(FilterComponent.new(model: @model, filter: filter.to_s, filters: @filters, filter_type: filter_type, reflex: "change->ScatterPlotComponent#change_filter", key: key)) %>
  <% end %>
  <canvas data-<%= self.class.stimulus_controller %>-target="canvas" width="400" height="400">insert graph here</div>
<% end %>
